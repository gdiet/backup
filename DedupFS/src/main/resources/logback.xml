<!-- TODO Here, I'd prefer a per project logback configuration.
     However, if I have logback.xml here and e.g. in FTPServer,
     logback finds both and complains about multiple configuration
     file in classpath. -->
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{30} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- For FTPServer -->
  <logger name="org.apache" level="warn"/>

  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>